<div class="forum-card">
  <div class="col-6 p-0">
    <%= link_to forum_path(forum), class:"text-decoration-none" do %>
    <div class="link-hover-background d-flex" style="height: 120px;border-right: 0.5px solid lightgrey;">
        <img src="https://images.unsplash.com/photo-1531058020387-3be344556be6?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" width=100 alt="">
        <div style="width: 435px;" class="d-flex align-items-center justify-content-center">
          <h4 style="font-size: 24px;"><%= forum.name %></h4>
        </div>
    </div>
    <% end %>
  </div>
  <div class="col-6 d-flex" style="width: 555px;">
    <%= link_to forum_post_path(forum, forum.posts.last), class:"text-decoration-none" do %>
      <div>
        <span style="font-style: italic;font-size: 12px;">Latest Post</span>
      </div>
      <div class="link-hover-text" style="width: 500px;">
        <span><%= forum.posts.last.subject %></span>
      </div>
    <% end %>
  </div>
</div>

