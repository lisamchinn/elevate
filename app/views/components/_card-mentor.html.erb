<div class="card-mentor">
  <% if current_user.mentee %>
    <h4>Your Mentor</h4>
  <% elsif @counterparty_profile %>
    <h4>Your Mentee</h4>
  <% else %>
    <h4 class="text-center">No Mentee asigned yet.</h4>
  <% end  %>
  <% if @counterparty_profile %>
    <div class="d-flex my-2">
      <%= cl_image_tag @counterparty_profile.user.photo, class: "round" %>
      <div class="ml-2 flex-column d-flex align-items-start">
        <h6 class="font-weight-bold my-0"><%= @counterparty_profile.user.first_name %> <%= @counterparty_profile.user.last_name %></h6>
        <p class="my-0"><%= @counterparty_profile.current_title %> at <%= @counterparty_profile.current_employer %></p>
        <p class="mt-0"><%= @counterparty_profile.city %>, <%= @counterparty_profile.state %></p>
      </div>
    </div>
    <div class="card-link-wrapper">
      <%= link_to "View Profile", profile_path(@counterparty_profile), class: "btn btn-ghost small mt-2 mb-1" %>
    </div>
  <% end %>
  <div class="card-link-wrapper">
    <% if current_user.mentee %>
      <%= link_to "Message her", match_messages_path(profile.user.matches_as_mentee.first), class: "btn btn-solid small mt-2 mb-1" %>
    <% elsif @counterparty_profile %>
      <%= link_to "Message her", match_messages_path(profile.user.matches_as_mentor.first), class: "btn btn-solid small mt-2 mb-1" %>
    <% end %>
  </div>
  <% if @counterparty_profile %>
    <div class="card-link-wrapper">
      <%= link_to "End Mentorship", root_path, class: "btn btn-ghost small mt-2 mb-1"%>
    </div>
  <% end %>
</div>


