<div class="reply-card d-flex">
  <div class="reply-info-card d-flex align-items-center">
    <div class="d-flex-wrap" style="min-height: 60px;text-align: center;">
      <div class="d-flex justify-content-center">
        <span><%= cl_image_tag reply.user.photo, class: "avatar" %></span>
      </div>
      <div class="d-flex justify-content-center">
        <span><%= reply.user.first_name %></span>
      </div>
    </div>
    <div class="reply-content">
      <p><%= reply.content %></p>
    </div>
  </div>
</div>
