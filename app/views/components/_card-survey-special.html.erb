<div class="container-special-form">
  <ul id="columns">
  <div class="draggable-zone">
      <% @question.question_answer_pairs.each do |question_answer_pair| %>
        <li id="draggable" class="column answer" draggable="true" value="<%= question_answer_pair.id %>-"><%= question_answer_pair.answer_option.content %></span></li>
      <% end %>
  </div>
  </ul>
  <form action="/user_answers" method="post" id="submit_answers">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <input type="hidden" name="user_answers" id="user_answers" draggable="true">
    <input type="hidden" name="question" value="<%= @question.id %>">
    <!-- <input type="submit"> -->
    <div class="d-flex align-items-center justify-content-center lisa">
      <input type="submit" class="mt-4 mb-4" id="submit-special">
    </div>
  </form>
</div>

