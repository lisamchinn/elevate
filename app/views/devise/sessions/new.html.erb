<div class="form-container">
<div class="form-wrapper mt-3">
  <div class="logo-wrapper">
    <div class="logo"></div>
  <h2 class="log-in-header">Ellevate</h2>
  </div>
  <div class="p-div">
  <p class="log-in-p ">Find a mentor and change your life</p>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs ">
    <%= f.input :email,
    required: false,
    autofocus: true,
    input_html: { autocomplete: "email", class: "form-input" },
    label_html: { class: "form-label" }
    %>
    <%= f.input :password,
    required: false,
    input_html: { autocomplete: "current-password", class: "form-label" },
    label_html: { class: "form-label" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class:"btn  my-5 btn-black form-label btn-block" %>
  </div>
  <% end %>

  <%= render "devise/shared/links", class:"my-3 " %>
</div>
</div>
