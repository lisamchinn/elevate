<div class="container">

  <h1 class="pt-5" style="text-align: center;">Events</h1>

  <% content_for :meta_title, "Events | Ellevate" %>
    <div class="forum-searchbar">
      <form class="simple_form search" action="/events" method="get" autocomplete="off">
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search" id="search_query" placeholder="Search a city near you..." />
          <button name="button" type="submit" class="btn btn-solid">
            <i class="fas fa-search"></i> Search</button>
        </div>
      </form>
  </div>

  <div class="d-flex-wrap justify-content-center" style="min-height: 400px;">
    <% if !@events.nil? %>
      <% if @events.empty? %>
        <div class="d-flex justify-content-center pt-3">
          <p style="font-size: 18px;">No results for this search. Please try another city.</p>
        </div>
      <% elsif @events.count == 1 %>
        <p class="pt-3" style="text-align: center;font-size: 18px;">Your search returned 1 result!</p>

        <div class="d-flex justify-content-center pt-3">
          <span><%= render 'components/card-event', event: @events.first %></span>
        </div>

      <% else %>
        <div class="d-flex justify-content-center pt-3">
          <ul>
            <p class="pt-3" style="text-align: center;font-size: 18px;">Your search returned <%= @events.count %> results!</p>
            <% @events.each do |event| %>

              <span><%= render 'components/card-event', event: event %></span>

            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="d-flex justify-content-center pt-3">
        <span><%= link_to "Back to All Events", events_path, class: "text-dark" %></span>
      </div>
    <% else %>
      <ul>
        <h3>All upcoming events:</h3>
        <% @events.each do |event| %>
          <%= render 'components/card-category', event: event %>
        <% end %>
      </ul>
      <% end %>
  </div>
  <div class="d-flex justify-content-center">
      <%= link_to "Back to Home", root_path, class: "btn-solid mt-4 mb-5" %>
  </div>
  </div>

</div>

