<% content_for :meta_title, "#{@event.title} | Ellevate" %>
<div class="container">

  <div class="event-info-and-booking">
    <div class="event-info-only">
      <p><%= @event.date.strftime('%A, %B %e, %Y') %></p>
      <h2><%= @event.title %></h2>
      <div class="d-flex event-host-info align-items-center">
        <%= cl_image_tag @event.host_photo, class: "avatar" %>
        <p>Hosted by <strong><%= @event.host %></strong> of <%= @event.host_company %></p>
      </div>
    </div>
    <div class="event-booking">
      <p>Are you going?</p>
    </div>
  </div>

  <div class="event-descrip-and-map">
    <div class="event-description">
    </div>
    <div class="event-map">
    </div>
  </div>

  <div class="d-flex justify-content-center">
      <%= link_to "Back to Events", events_path, class: "btn-solid mt-4 mb-5" %>
  </div>

</div
