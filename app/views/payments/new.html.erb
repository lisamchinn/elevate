<% content_for :meta_title, "Payment Information | Ellevate" %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1491438590914-bc09fcaaf77a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80);">
  <div class="container-donation">
    <div class="col-6 donation-form mx-auto">
      <!-- <div class="donation-logo-wrapper">
        <div class="logo"></div>
        <h2 class="log-in-header">Ellevate</h2>
      </div>
      <div class="p-div donation-paragraph">
        <p class="log-in-p ">Find a mentor and change your life</p>
      </div> -->
      <div class="mx-auto">
        <h6>Your Donation to Ellevate</h6>
        <%= form_tag donation_payments_path(@donation) do %>
        <article>
          <label class="amount">
            <span>Amount: <%= humanized_money_with_symbol(@donation.amount) %></span>
          </label>
        </article>

        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-name="My Ellevate Donation"
          data-email="<%= @donation.donor_email %>"
          data-description="Donation <%= @donation.id %>"
          data-amount="<%= @donation.amount_cents %>"
          data-currency="<%= @donation.amount.currency %>"></script>
        <% end %>
      </div>
    </div>
  </div>
</div>


